<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_analysis_request_view_tree" model="ir.ui.view">
        <field name="name">em.hms.analysis.request.view.tree</field>
        <field name="model">em.hms.analysis.request</field>
        <field name="arch" type="xml">
            <tree string="Analysis Request">
                <field name="patient_id" />
                <field name="create_date" />
            </tree>
        </field>
    </record>
    <record id="em_hms_analysis_request_view_form" model="ir.ui.view">
        <field name="name">em.hms.analysis.request.view.form</field>
        <field name="model">em.hms.analysis.request</field>
        <field name="arch" type="xml">
            <form string="Analysis Request">
                <header>
                    <button string="Complete Order" name="complete_order" type="object" class="oe_highlight" invisible="state != 'draft'" />

                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" />
                            <field name="create_date" />
                            <field name="name" />
                            <field name="res_id" invisible="1" />
                            <field name="res_model_id" invisible="1" />
                        </group>
                    </group>
                    <separator string="Lines" />
                    <field name="line_ids" />
                    <group>
                        <group>
                            <field name="notes" wiget="text" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="em_hms_analysis_request_action" model="ir.actions.act_window">
        <field name="name">Analysis Request</field>
        <field name="res_model">em.hms.analysis.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="em_hms_analysis_request_line_view_tree" model="ir.ui.view">
        <field name="name">em.hms.analysis.request.line.view.tree</field>
        <field name="model">em.hms.analysis.request.line</field>
        <field name="arch" type="xml">
            <tree string="Analysis Requests" editable="bottom">
                <field name="product_template_id" />
                <field name="result" />
                <field name="notes" />
            </tree>
        </field>
    </record>

    <record id="em_hms_analysis_request_line_view_form" model="ir.ui.view">
        <field name="name">em.hms.analysis.request.line.view.form</field>
        <field name="model">em.hms.analysis.request.line</field>
        <field name="arch" type="xml">
            <form string="Analysis Request">
                <sheet>
                    <group>
                        <group>
                            <field name="product_template_id" />
                            <field name="result" />
                            <field name="notes" />
                        </group> 
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_analysis_request_line_action" model="ir.actions.act_window">
        <field name="name">Analysis Requests</field>
        <field name="res_model">em.hms.analysis.request.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
