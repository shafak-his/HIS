<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="em_hms_phc_icd10_view_tree" model="ir.ui.view">
        <field name="name">em.hms.phc.icd10.view.tree</field>
        <field name="model">em.hms.phc.icd10</field>
        <field name="arch" type="xml">
            <tree string="PHC ICD10 List" editable="bottom">
                <field name="name" />
                <field name="name_lang" />
                <field name="code" />
                <field name="is_ncd" />
                <field name="is_traumatic" />
                <field name="is_diabetes" />
            </tree>
        </field>
    </record>

    <record id="em_hms_phc_icd10_view_form" model="ir.ui.view">
        <field name="name">em.hms.phc.icd10.view.form</field>
        <field name="model">em.hms.phc.icd10</field>
        <field name="arch" type="xml">
            <form string="PHC ICD10 List">
                <header>
                </header>
                <sheet>
                    <div class="badge-pill badge-info float-left"
                        attrs="{'invisible':[('is_ncd','=',False)]}">
                        <label for="is_ncd" class="oe_inline"/>
                        <field name="is_ncd" readonly="1" force_save="1" />
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="name_lang" />
                            <field name="code" />
                        </group>
                        <group>
                            <field name="is_ncd" widget="boolean_toggle" />
                            <field name="is_traumatic" widget="boolean_toggle" />
                            <field name="is_diabetes" widget="boolean_toggle" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_phc_icd10_action" model="ir.actions.act_window">
        <field name="name">PHC ICD10 List</field>
        <field name="res_model">em.hms.phc.icd10</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>