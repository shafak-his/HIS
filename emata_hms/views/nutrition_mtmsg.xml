<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main -->
    <record id="em_hms_nutrition_mtmsg_view_tree" model="ir.ui.view">
        <field name="name">em.hms.nutrition.mtmsg.view.tree</field>
        <field name="model">em.hms.nutrition.mtmsg</field>
        <field name="arch" type="xml">
            <tree string="MTMSG" >
                <field name="name" />
                <field name="project_id" optional="hide" />
                <field name="visit_date" />
                <field name="state_id" optional="hide" />
                <field name="district_id" optional="hide" />
                <field name="sub_district_id" optional="hide" />
                <field name="location_id" />
                <field name="camp_name" />
                <field name="team_code_id" />
                <field name="service_place" />
                <field name="number_pregnants_qt_eq_18" optional="hide" />
                <field name="number_pregnants_lt_18" optional="hide" />
                <field name="number_breastfeeding_qt_eq_18" optional="hide" />
                <field name="number_breastfeeding_lt_18" optional="hide" />
                <field name="number_female_caregivers_qt_eq_18" optional="hide" />
                <field name="number_female_caregivers_lt_18" optional="hide" />
                <field name="session_topic_ids" widget="many2many_tags" optional="hide" />
                <field name="session_topic_iyc_ids" widget="many2many_tags" optional="hide" />
                <field name="other_iyc_topic" optional="hide" />
                <field name="session_topic_cholera_ids" widget="many2many_tags" optional="hide" />
                <field name="other_cholera_topic" optional="hide" />
                <field name="session_topic_corona_ids" widget="many2many_tags" optional="hide" />
                <field name="other_corona_topic" optional="hide" />
                <field name="session_topic_wash_ids" widget="many2many_tags" optional="hide" />
                <field name="other_wash_topic" optional="hide" />
                <field name="session_topic_chronic_ids" widget="many2many_tags" optional="hide" />
                <field name="other_chronic_topic" optional="hide" />
                <field name="session_topic_infectious_ids" widget="many2many_tags" optional="hide" />
                <field name="other_infectious_topic" optional="hide" />
                <field name="session_topic_rh_ids" widget="many2many_tags" optional="hide" />
                <field name="other_rh_topic" optional="hide" />
                <field name="number_mothers_educated_muac_qt_eq_18" optional="hide" />
                <field name="number_mothers_educated_muac_lt_18" optional="hide" />
                <field name="company_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="em_hms_nutrition_mtmsg_view_form" model="ir.ui.view">
        <field name="name">em.hms.nutrition.mtmsg.view.form</field>
        <field name="model">em.hms.nutrition.mtmsg</field>
        <field name="arch" type="xml">
            <form string="MTMSG">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1" />
                            <field name="project_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="visit_date" widget="date" />
                            <field name="team_code_id" />
                            <field name="service_place" />
                        </group>
                        <group>
                            <field name="state_id" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="district_id" domain="[('state_id', '=', state_id)]" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="sub_district_id" domain="[('district_id', '=', district_id)]" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="location_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="camp_name" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="number_pregnants_qt_eq_18" />
                            <field name="number_pregnants_lt_18" />
                            <field name="number_breastfeeding_qt_eq_18" />
                            <field name="number_breastfeeding_lt_18" />
                        </group>
                        <group>
                            <field name="number_female_caregivers_qt_eq_18" />
                            <field name="number_female_caregivers_lt_18" />
                        </group>
                    </group>
                    <group string="Topics">
                        <field name="session_topic_ids">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>

                        <field name="session_topic_iyc_ids" invisible="is_iyc_topic != True" required="is_iyc_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_iyc_topic" invisible="is_iyc_topic_other != True" required="is_iyc_topic_other == True" />
                    
                        <field name="session_topic_cholera_ids" invisible="is_cholera_topic != True" required="is_cholera_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_cholera_topic" invisible="is_cholera_topic_other != True" required="is_cholera_topic_other == True" />

                        <field name="session_topic_corona_ids" invisible="is_corona_topic != True" required="is_corona_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_corona_topic" invisible="is_corona_topic_other != True" required="is_corona_topic_other == True" />

                        <field name="session_topic_wash_ids" invisible="is_wash_topic != True" required="is_wash_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_wash_topic" invisible="is_wash_topic_other != True" required="is_wash_topic_other == True" />

                        <field name="session_topic_chronic_ids" invisible="is_chronic_topic != True" required="is_chronic_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_chronic_topic" invisible="is_chronic_topic_other != True" required="is_chronic_topic_other == True" />

                        <field name="session_topic_infectious_ids" invisible="is_infectious_topic != True" required="is_infectious_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_infectious_topic" invisible="is_infectious_topic_other != True" required="is_infectious_topic_other == True" />

                        <field name="session_topic_rh_ids" invisible="is_rh_topic != True" required="is_rh_topic == True">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                            </tree>
                        </field>
                        <field name="other_rh_topic" invisible="is_rh_topic_other != True" required="is_rh_topic_other == True" />

                        <field name="is_iyc_topic" invisible="1" />
                        <field name="is_iyc_topic_other" invisible="1" />
                        <field name="is_cholera_topic" invisible="1" />
                        <field name="is_cholera_topic_other" invisible="1" />
                        <field name="is_corona_topic" invisible="1" />
                        <field name="is_corona_topic_other" invisible="1" />
                        <field name="is_wash_topic" invisible="1" />
                        <field name="is_wash_topic_other" invisible="1" />
                        <field name="is_chronic_topic" invisible="1" />
                        <field name="is_chronic_topic_other" invisible="1" />
                        <field name="is_infectious_topic" invisible="1" />
                        <field name="is_infectious_topic_other" invisible="1" />
                        <field name="is_rh_topic" invisible="1" />
                        <field name="is_rh_topic_other" invisible="1" />
                    </group>
                    <group>
                        <group>
                            <field name="number_mothers_educated_muac_qt_eq_18" />
                            <field name="number_mothers_educated_muac_lt_18" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_nutrition_mtmsg_action" model="ir.actions.act_window">
        <field name="name">MTMSG</field>
        <field name="res_model">em.hms.nutrition.mtmsg</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>