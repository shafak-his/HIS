<odoo>

    <record id="em_hms_medical_history_view_tree" model="ir.ui.view">
        <field name="name">em.hms.medical.history.view.tree</field>
        <field name="model">em.hms.medical.history</field>
        <field name="arch" type="xml">
            <tree string="Medical History">
                <field name="name" />
                <field name="name_lang" />
                <field name="activity_name" />
                <field name="patient_id" />
