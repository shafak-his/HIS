<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_rhs_delvery_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.delvery.view.tree</field>
        <field name="model">em.hms.rhs.delvery</field>
        <field name="arch" type="xml">
            <tree string="Normal Delveries">
                <field name="patient_id" />
                <field name="admission_date" />
                <field name="admitting_midwife_id" />
                <field name="admitting_physician_id" />
                <field name="husband_name" optional="hide" />
                <field name="guardian_name" optional="hide" />
                <field name="allergic_history" optional="hide" />
                <field name="drug_history" optional="hide" />
                <field name="surgical_history" optional="hide" />
                <field name="medical_history" optional="hide" />
                <field name="initial_diagnosis" optional="hide" />
                <field name="child_name" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_delvery_view_form" model="ir.ui.view">
        <field name="name">em.hms.rhs.delvery.view.form</field>
        <field name="model">em.hms.rhs.delvery</field>
        <field name="arch" type="xml">
            <form string="Normal Delvery">
                <sheet>
                    <group string="Main">
                        <group>
                            <field name="patient_id" />
                            <field name="admission_date" widget="date" />
                            <field name="admitting_midwife_id" />
                            <field name="admitting_physician_id" />
                            <field name="husband_name" />
                            <field name="guardian_name" />
                        </group>
                        <group>
                            <field name="allergic_history" widget="text" />
                            <field name="drug_history" widget="text" />
                            <field name="surgical_history" widget="text" />
                            <field name="medical_history" widget="text" />
                            <field name="child_name" />
                        </group>
                    </group>
                    <group string="Biological signs on admission">
                        <group>
                            <field name="pre_birth_pressure" />
                            <field name="pre_birth_pulse" />
                        </group>
                        <group>
                            <field name="pre_birth_temperature" />
                            <field name="pre_birth_awareness" />
                        </group>
                    </group>
                    <group string="Previous pregnancies">
                        <group>
                            <field name="number_of_natural_births" />
                            <field name="number_of_cesarean_births" />
                        </group>
                        <group>
                            <field name="number_of_miscarriages" />
                            <field name="pregnancy_related_diseases" />
                        </group>
                    </group>
                    <group string="Eco when admitting">
                        <group>
                            <field name="gestational_age" />
                            <field name="arrival" />
                            <field name="eco_auscultation" />
                        </group>
                        <group>
                            <field name="placenta" />
                            <field name="amniotic_fluid" />
                        </group>
                    </group>
                    <group string="Travail monitoring table">
                        <group>
                            <field name="travail_hour" widget="datetime" />
                            <field name="contraction_duration" />
                            <field name="interval_between_contractions" />
                        </group>
                        <group>
                            <field name="travail_auscultation" />
                            <field name="dilation" />
                            <field name="erasure" />
                        </group>
                    </group>
                    <group string="Birth report">
                        <group>
                            <field name="birth_datetime" widget="datetime" />
                            <field name="medications_birth" />
                            <field name="birth_report" widget="text" />
                            <field name="newborn_condition" />
                        </group>
                        <group>
                            <field name="newborn_gender" widget="radio" />
                            <field name="newborn_weight" />
                            <field name="is_breastfeeding_first_hour" widget="checkbox" />
                        </group>
                    </group>
                    <group string="Post-birth monitoring table">
                        <group>
                            <field name="post_birth_datetime" widget="datetime" />
                            <field name="post_birth_pressure" />
                            <field name="post_birth_pulse" />
                            <field name="post_birth_temperature" />
                        </group>
                        <group>
                            <field name="is_post_birth_safety_ball" widget="checkbox" />
                            <field name="is_post_birth_urine_voiding" widget="checkbox" />
                            <field name="post_birth_notes" widget="text" />
                        </group>
                    </group>
                    <group string="Discharge card">
                        <group>
                            <field name="discharge_datetime" widget="datetime" />
                            <field name="discharge_supervising_physician_id" />
                            <field name="discharge_duty_midwife_id" />
                            <field name="post_birth_temperature" />
                        </group>
                        <group>
                            <field name="patient_condition" />
                            <field name="newborn_condition" />
                            <field name="patient_companion_name" />
                            <field name="patient_companion_relationship" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_rhs_delvery_action" model="ir.actions.act_window">
        <field name="name">Normal Delveries</field>
        <field name="res_model">em.hms.rhs.delvery</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>