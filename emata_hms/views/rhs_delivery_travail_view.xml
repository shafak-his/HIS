<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_rhs_delivery_travail_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.delivery.travail.view.tree</field>
        <field name="model">em.hms.rhs.delivery.travail</field>
        <field name="arch" type="xml">
            <tree string="Delivery Travails" create="0" delete="0">
                <field name="delivery_id" />
                <field name="patient_id" />
                <field name="travail_hour" />
                <field name="contraction_duration" />
                <field name="interval_between_contractions" />
                <field name="travail_auscultation" optional="hide" />
                <field name="dilation" optional="hide" />
                <field name="erasure" optional="hide" />
                <field name="company_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_delivery_travail_view_form" model="ir.ui.view">
        <field name="name">em.hms.rhs.delivery.travail.view.form</field>
        <field name="model">em.hms.rhs.delivery.travail</field>
        <field name="arch" type="xml">
            <form string="Delivery Travail">
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="delivery_id" /> -->
                            <field name="patient_id" />
                            <field name="travail_hour" widget="datetime" />
                            <field name="contraction_duration" />
                            <field name="interval_between_contractions" />
                        </group>
                        <group>
                            <field name="travail_auscultation" />
                            <field name="dilation" />
                            <field name="erasure" />
                        </group>
                    </group>
                    <group>
                            <group>
                            <field name="company_id" readonly="1" force_save="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_rhs_delivery_travail_action" model="ir.actions.act_window">
        <field name="name">Delivery Travails</field>
        <field name="res_model">em.hms.rhs.delivery.travail</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
