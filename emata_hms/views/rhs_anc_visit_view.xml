<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_rhs_anc_visit_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.anc.visit.view.tree</field>
        <field name="model">em.hms.rhs.anc.visit</field>
        <field name="arch" type="xml">
            <tree string="ANC Visits">
                <field name="anc_id" />
                <field name="patient_id" />
                <field name="visit_date" />
                <field name="is_signs" />
                <field name="arterial_position" />
                <field name="weight" />
                <field name="fetal_hr" />
                <field name="main_complaint" />
                <field name="head_diameter" />
                <field name="thigh_height" />
                <field name="presence" />
                <field name="fluid" />
                <field name="deformities" />
                <field name="genital_age_in_weeks" />
                <field name="vaginal_examination_if_performed" />
                <field name="treatment" />
                <field name="is_tetanus_vaccined" />
                <field name="next_visit_date" />
                <field name="name_of_examiner" />
                <field name="additional_notes" />
                <field name="analysis_request_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_anc_visit_view_form" model="ir.ui.view">
        <field name="name">em.hms.rhs.anc.visit.view.form</field>
        <field name="model">em.hms.rhs.anc.visit</field>
        <field name="arch" type="xml">
            <form string="ANC Visit">
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="anc_id" /> -->
                            <field name="patient_id" />
                            <field name="visit_date" widget="date" />
                            <field name="is_signs" />
                            <field name="arterial_position" />
                            <field name="weight" />
                            <field name="fetal_hr" widget="integer" />
                        </group>
                        <group>
                            <field name="main_complaint" />
                            <field name="head_diameter" />
                            <field name="thigh_height" />
                            <field name="presence" />
                            <field name="fluid" />
                            <field name="deformities" />
                            <field name="genital_age_in_weeks" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="vaginal_examination_if_performed" />
                            <field name="treatment" />
                            <field name="is_tetanus_vaccined" />
                        </group>
                        <group>
                            <field name="next_visit_date" widget="date" />
                            <field name="name_of_examiner" />
                            <field name="additional_notes" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_rhs_anc_visit_action" model="ir.actions.act_window">
        <field name="name">ANC Visits</field>
        <field name="res_model">em.hms.rhs.anc.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
