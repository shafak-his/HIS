<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_rhs_pnc_visit_path_find_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.pnc.visit.path.find.view.tree</field>
        <field name="model">em.hms.rhs.pnc.visit.path.find</field>
        <field name="arch" type="xml">
            <tree string="PNC Visit Pathological findings" editable="bottom">
                <field name="name" />
                <field name="name_lang" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_pnc_visit_path_find_action" model="ir.actions.act_window">
        <field name="name">PNC Visit Pathological findings</field>
        <field name="res_model">em.hms.rhs.pnc.visit.path.find</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <record id="em_hms_rhs_pnc_visit_post_comp_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.pnc.visit.post.comp.view.tree</field>
        <field name="model">em.hms.rhs.pnc.visit.post.comp</field>
        <field name="arch" type="xml">
            <tree string="PNC Visit Postpartum complications" editable="bottom">
                <field name="name" />
                <field name="name_lang" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_pnc_visit_post_comp_action" model="ir.actions.act_window">
        <field name="name">PNC Visit Postpartum complications</field>
        <field name="res_model">em.hms.rhs.pnc.visit.post.comp</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <record id="em_hms_rhs_pnc_visit_exist_wound_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.pnc.visit.exist.wound.view.tree</field>
        <field name="model">em.hms.rhs.pnc.visit.exist.wound</field>
        <field name="arch" type="xml">
            <tree string="PNC Visit Existing wounds" editable="bottom">
                <field name="name" />
                <field name="name_lang" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_pnc_visit_exist_wound_action" model="ir.actions.act_window">
        <field name="name">PNC Visit Existing wounds</field>
        <field name="res_model">em.hms.rhs.pnc.visit.exist.wound</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <record id="em_hms_rhs_pnc_visit_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rhs.pnc.visit.view.tree</field>
        <field name="model">em.hms.rhs.pnc.visit</field>
        <field name="arch" type="xml">
            <tree string="PNC Visits">
                <field name="pnc_id" />
                <field name="patient_id" />
                <field name="visit_date" />
                <field name="arterial_pressure" />
                <field name="temperature" />
                <field name="pulse" />
                <field name="pathological_finding_ids" widget="many2many_tags" />
                <field name="postpartum_complication_ids" widget="many2many_tags" />
                <field name="existing_wound_ids" widget="many2many_tags" />
                <field name="breastfeeding" />
                <field name="is_tetanus_vaccined" />
                <field name="patient_complaint" />
                <field name="echo_findings" />
                <field name="name_of_examiner" />
                <field name="medication_request_ids" widget="many2many_tags" />
                <field name="analysis_request_ids" widget="many2many_tags" />
                <field name="image_request_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rhs_pnc_visit_view_form" model="ir.ui.view">
        <field name="name">em.hms.rhs.pnc.visit.view.form</field>
        <field name="model">em.hms.rhs.pnc.visit</field>
        <field name="arch" type="xml">
            <form string="PNC Visit">
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="pnc_id" /> -->
                            <field name="patient_id" />
                            <field name="visit_date" widget="date" />
                            <field name="arterial_pressure" widget="integer" />
                        </group>
                        <group>
                            <field name="temperature" widget="float" />
                            <field name="pulse" widget="integer" />
                            <field name="breastfeeding" widget="radio" />
                            <field name="is_tetanus_vaccined" widget="checkbox" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="patient_complaint" />
                            <field name="echo_findings" />
                            <field name="name_of_examiner" />
                        </group>
                        <group>
                            <field name="pathological_finding_ids" widget="many2many_tags" />
                            <field name="postpartum_complication_ids" widget="many2many_tags" />
                            <field name="existing_wound_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <group string="Documents">
                        <group>
                            <field name="medication_request_ids"
                                domain="[('is_medication', '=', True)]">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="name" />
                                </tree>
                            </field>
                            <field name="analysis_request_ids"
                                domain="[('is_medical_analysis', '=', True)]">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="image_request_ids"
                                domain="[('is_medical_imaging', '=', True)]">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_rhs_pnc_visit_action" model="ir.actions.act_window">
        <field name="name">PNC Visits</field>
        <field name="res_model">em.hms.rhs.pnc.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>