<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Beneficiaries -->
    <record id="em_hms_nutrition_bnf_view_tree" model="ir.ui.view">
        <field name="name">em.hms.nutrition.bnf.view.tree</field>
        <field name="model">em.hms.nutrition.bnf</field>
        <field name="arch" type="xml">
            <tree string="Nutrition Beneficiaries" editable="bottom">
                <field name="name" />
                <field name="name_lang" />
                <field name="age" />
                <field name="visit_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="em_hms_nutrition_bnf_action" model="ir.actions.act_window">
        <field name="name">Nutrition Beneficiaries</field>
        <field name="res_model">em.hms.nutrition.bnf</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!-- Beneficiariy Visits -->
    <record id="em_hms_nutrition_bnf_visit_view_tree" model="ir.ui.view">
        <field name="name">em.hms.nutrition.bnf.visit.view.tree</field>
        <field name="model">em.hms.nutrition.bnf.visit</field>
        <field name="arch" type="xml">
            <tree string="Beneficiary Visits" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="em_hms_nutrition_bnf_visit_action" model="ir.actions.act_window">
        <field name="name">Beneficiary Visits</field>
        <field name="res_model">em.hms.nutrition.bnf.visit</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!-- Main -->
    <record id="em_hms_nutrition_ftfsg_view_tree" model="ir.ui.view">
        <field name="name">em.hms.nutrition.ftfsg.view.tree</field>
        <field name="model">em.hms.nutrition.ftfsg</field>
        <field name="arch" type="xml">
            <tree string="FTFSG" >
                <field name="name" />
                <field name="project_id" optional="hide" />
                <field name="visit_date" />
                <field name="state_id" optional="hide" />
                <field name="district_id" optional="hide" />
                <field name="sub_district_id" optional="hide" />
                <field name="location_id" />
                <field name="camp_name" />
                <field name="team_code_id" />
                <field name="service_place" />
                <field name="session_presenter_name" />
                <field name="number_male_caregivers_qt_eq_18" optional="hide" />
                <field name="number_male_caregivers_lt_18" optional="hide" />
                <field name="bnf_ids" widget="many2many_tags" optional="hide" />
                <field name="company_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="em_hms_nutrition_ftfsg_view_form" model="ir.ui.view">
        <field name="name">em.hms.nutrition.ftfsg.view.form</field>
        <field name="model">em.hms.nutrition.ftfsg</field>
        <field name="arch" type="xml">
            <form string="FTFSG">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1" />
                            <field name="project_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="visit_date" widget="date" />
                            <field name="team_code_id" />
                            <field name="service_place" />
                            <field name="session_presenter_name" />
                        </group>
                        <group>
                            <field name="state_id" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="district_id" domain="[('state_id', '=', state_id)]" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="sub_district_id" domain="[('district_id', '=', district_id)]" options="{'no_create': True, 'no_quick_create': True}" readonly="1" force_save="1" />
                            <field name="location_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="camp_name" />
                        </group>
                    </group>
                    <group string="Beneficiaries">
                        <field name="bnf_ids">
                            <tree create="0" delete="0" editable="bottom">
                                <field name="name" />
                                <field name="name_lang" />
                                <field name="age" />
                                <field name="visit_ids" widget="many2many_tags" />
                            </tree>
                        </field>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_nutrition_ftfsg_action" model="ir.actions.act_window">
        <field name="name">FTFSG</field>
        <field name="res_model">em.hms.nutrition.ftfsg</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>