<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_mh_gap_view_tree" model="ir.ui.view">
        <field name="name">em.hms.mh.gap.view.tree</field>
        <field name="model">em.hms.mh.gap</field>
        <field name="arch" type="xml">
            <tree string="Mental Health GAPs">
                <field name="session_date" />
                <field name="patient_id" />
                <field name="educational_level" />
                <field name="service_type" />
                <field name="is_mh_assessment" />
                <field name="is_pss_service" />
                <field name="severity_score" />
                <field name="principal_diagnosis" />
                <field name="file_status" />
                <field name="case_closure_date" />
                <field name="pre_gap" />
                <field name="post_gap" />
                <field name="reasons_for_closure" />
                <field name="other_reason_for_closure" />
                <field name="medical_center_id" />
                <field name="service_provider_id" />
                <field name="medication_request_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="em_hms_mh_gap_view_form" model="ir.ui.view">
        <field name="name">em.hms.mh.gap.view.form</field>
        <field name="model">em.hms.mh.gap</field>
        <field name="arch" type="xml">
            <form string="Mental Health GAP">
                <sheet>
                    <group>
                        <group>
                            <field name="session_date" />
                            <field name="patient_id" />
                            <field name="service_type" widget="radio" />
                            <field name="is_mh_assessment" widget="boolean_toggle" />
                            <field name="is_pss_service" widget="boolean_toggle" />
                        </group>
                        <group>
                            <field name="severity_score" widget="radio" />
                            <field name="principal_diagnosis" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="file_status" widget="radio" />
                        </group>
                        <group>
                            <field name="case_closure_date" widget="date" invisible="file_status != 'closed'" />
                            <field name="pre_gap" widget="integer" invisible="file_status != 'closed'" />
                            <field name="post_gap" widget="integer" invisible="file_status != 'closed'" />
                            <field name="reasons_for_closure" invisible="file_status != 'closed'" />
                            <field name="other_reason_for_closure" invisible="file_status != 'closed' or reasons_for_closure != 'other'" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="medical_center_id" />
                            <field name="service_provider_id" />
                        </group>
                        <group>
                            <field name="medication_request_ids"
                                domain="[('is_phc_medication', '=', True)]">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_mh_gap_action" model="ir.actions.act_window">
        <field name="name">Mental Health GAPs</field>
        <field name="res_model">em.hms.mh.gap</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
