<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Main -->
    <record id="em_hms_rh_awareness_view_tree" model="ir.ui.view">
        <field name="name">em.hms.rh.awareness.view.tree</field>
        <field name="model">em.hms.rh.awareness</field>
        <field name="arch" type="xml">
            <tree string="RH Awareness">
                <field name="patient_id" />
                <field name="session_date" />
                <field name="community_health_worker_name" optional="hide" />
                <field name="project_id" optional="hide" />
                <field name="new_old" optional="hide" />
                <field name="center" optional="hide" />
                <field name="session_title" optional="hide" />
                <field name="comments" optional="hide" />
                <field name="company_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="em_hms_rh_awareness_view_form" model="ir.ui.view">
        <field name="name">em.hms.rh.awareness.view.form</field>
        <field name="model">em.hms.rh.awareness</field>
        <field name="arch" type="xml">
            <form string="RH Awareness">
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="session_date" widget="date" />
                            <field name="community_health_worker_name" />
                            <field name="project_id" options="{'no_create': True, 'no_quick_create': True}" />
                            <field name="new_old" />
                        </group>
                        <group>
                            <field name="center" />
                            <field name="session_title" />
                            <field name="comments" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_rh_awareness_action" model="ir.actions.act_window">
        <field name="name">RH Awareness</field>
        <field name="res_model">em.hms.rh.awareness</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"></field>
        <field name="context"></field>
    </record>

</odoo>