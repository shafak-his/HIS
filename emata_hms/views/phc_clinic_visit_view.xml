<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_phc_clinic_visit_view_tree" model="ir.ui.view">
        <field name="name">em.hms.phc.clinic.visit.view.tree</field>
        <field name="model">em.hms.phc.clinic.visit</field>
        <field name="arch" type="xml">
            <tree string="PHC Clinic Visit">
                <field name="visit_datetime" />
                <field name="patient_id" />
                <field name="clinic_id" />
                <field name="is_pregnant" />
                <field name="is_lactating" />
                <field name="temperature" />
                <field name="pulse" />
                <field name="pressure" />
                <field name="weight" />
                <field name="height" />
                <field name="respiratory_rate" />
                <field name="medical_history" />
                <field name="allergic_history" />
                <field name="current_complaint" />
                <field name="diagnosis" />
                <field name="diagnosis_code" readonly="1" force_save="1" />
                <field name="procedures_followed" />
                <field name="type_of_procedure" />
                <field name="other_type_of_procedure" />
                <field name="doctor_id" />
                <field name="medication_request" widget="many2many_tags" />
                <field name="analysis_request" widget="many2many_tags" />
                <field name="aimage_request" widget="many2many_tags" />
                <field name="medical_center_id" widget="many2many_tags" />
                <field name="notes" />
            </tree>
        </field>
    </record>

    <record id="em_hms_phc_clinic_visit_view_form" model="ir.ui.view">
        <field name="name">em.hms.phc.clinic.visit.view.form</field>
        <field name="model">em.hms.phc.clinic.visit</field>
        <field name="arch" type="xml">
            <form string="PHC Clinic Visit">
                <sheet>
                    <group>
                        <group>
                            <field name="visit_datetime" />
                            <field name="patient_id" />
                            <field name="clinic_id" />
                        </group>
                        <group>
                            <field name="is_pregnant" widget="boolean_toggle" />
                            <field name="is_lactating" widget="boolean_toggle" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="temperature" widget="integer" />
                            <field name="pulse" />
                            <field name="pressure" />
                        </group>
                        <group>
                            <field name="weight" />
                            <field name="height" />
                            <field name="respiratory_rate" widget="integer" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="medical_history" widget="integer" />
                            <field name="allergic_history" />
                            <field name="current_complaint" />
                        </group>
                        <group>
                            <field name="diagnosis" />
                            <field name="diagnosis_code" readonly="1" force_save="1" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="procedures_followed" widget="integer" />
                            <field name="type_of_procedure" />
                            <field name="other_type_of_procedure" />
                        </group>
                        <group>
                            <field name="medication_request" domain="[('is_phc_medication', '=', True)]" />
                            <field name="analysis_request" domain="[('is_phc_analysis', '=', True)]" />
                            <field name="image_request" domain="[('is_phc_image', '=', True)]" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="doctor_id" widget="integer" />
                            <field name="medical_center_id" />
                        </group>
                        <group>
                            <field name="notes" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_phc_clinic_visit_action" model="ir.actions.act_window">
        <field name="name">PHC Clinic Visits</field>
        <field name="res_model">em.hms.phc.clinic.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
