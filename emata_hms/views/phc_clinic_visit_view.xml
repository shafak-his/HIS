<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_phc_clinic_visit_view_tree" model="ir.ui.view">
        <field name="name">em.hms.phc.clinic.visit.view.tree</field>
        <field name="model">em.hms.phc.clinic.visit</field>
        <field name="arch" type="xml">
            <tree string="PHC Clinic Visit">
                <field name="visit_datetime" />
            </tree>
        </field>
    </record>

    <record id="em_hms_phc_clinic_visit_view_form" model="ir.ui.view">
        <field name="name">em.hms.phc.clinic.visit.view.form</field>
        <field name="model">em.hms.phc.clinic.visit</field>
        <field name="arch" type="xml">
            <form string="PHC Clinic Visit">
                <sheet>
                    <group>
                        <group>
                            <field name="visit_datetime" />
                        </group> 
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="em_hms_phc_clinic_visit_action" model="ir.actions.act_window">
        <field name="name">PHC Clinic Visits</field>
        <field name="res_model">em.hms.phc.clinic.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
