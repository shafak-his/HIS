<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="em_hms_surgical_procedure_view_tree" model="ir.ui.view">
        <field name="name">em.hms.surgical.procedure.view.tree</field>
        <field name="model">em.hms.surgical.procedure</field>
        <field name="arch" type="xml">
            <tree string="Surgical Procedures" editable="bottom">
                <field name="name" />
                <field name="subcategory_id" />
                <field name="category" />
            </tree>
        </field>
    </record>

    <record id="em_hms_surgical_procedure_action" model="ir.actions.act_window">
        <field name="name">Surgical Procedures</field>
        <field name="res_model">em.hms.surgical.procedure</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    
    <record id="em_hms_surgical_subcategory_view_tree" model="ir.ui.view">
        <field name="name">em.hms.surgical.subcategory.view.tree</field>
        <field name="model">em.hms.surgical.subcategory</field>
        <field name="arch" type="xml">
            <tree string="Surgical Sub-Categories" editable="bottom">
                <field name="name" />
                <field name="category" />
            </tree>
        </field>
    </record>

    <record id="em_hms_surgical_subcategory_action" model="ir.actions.act_window">
        <field name="name">Surgical Sub-Categories</field>
        <field name="res_model">em.hms.surgical.subcategory</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>