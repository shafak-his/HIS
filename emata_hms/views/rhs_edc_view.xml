    </record>

    <record id="em_hms_rhs_edc_ascus_action" model="ir.actions.act_window">
        <field name="name">ASCUS</field>
        <field name="res_model">em.hms.rhs.edc.ascus</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
